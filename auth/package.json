{
  "name": "dreamscape-auth-service",
  "version": "1.0.0",
  "description": "Authentication microservice for Dreamscape OTA",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "tsc --project tsconfig.test.json && jest",
    "test:unit": "jest --config jest.config.unit.js",
    "test:integration": "tsc --project tsconfig.test.json && jest --config jest.config.integration.js --detectOpenHandles --forceExit",
    "test:integration:single": "tsc --project tsconfig.test.json && jest --config jest.config.integration.js --testNamePattern",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "db:reset": "npx prisma migrate reset --force",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/database/seed.ts"
  },
  "dependencies": {
    "@dreamscape/db": "file:../db",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.11",
    "@types/react-redux": "^7.1.34",
    "@types/redux-persist": "^4.0.0",
    "@types/supertest": "^6.0.3",
    "cypress": "^14.5.2",
    "jest": "^29.7.0",
    "jest-environment-node": "^30.0.4",
    "prisma": "^5.7.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "travel",
    "ota",
    "amadeus",
    "api",
    "backend"
  ],
  "author": "",
  "license": "MIT"
}
