{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/config": ["./config"],
      "@/services": ["./services"],
      "@/middleware": ["./middleware"],
      "@/routes": ["./routes"],
      "@/database": ["./database"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
